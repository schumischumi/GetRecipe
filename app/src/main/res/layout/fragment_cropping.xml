<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CroppingFragment">

    <ImageView
        android:id="@+id/imageViewToCrop"
        android:layout_width="413dp"
        android:layout_height="627dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Image to be cropped"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/buttonConfirmCurrentArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Basic selection overlay (improve with a library or more drawing logic) -->
    <View
        android:id="@+id/selectionOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#33FF0000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/imageViewToCrop"
        app:layout_constraintBottom_toBottomOf="@id/imageViewToCrop"
        app:layout_constraintStart_toStartOf="@id/imageViewToCrop"
        app:layout_constraintEnd_toEndOf="@id/imageViewToCrop" />

    <Button
        android:id="@+id/buttonConfirmCurrentArea"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="4dp"
        android:enabled="false"
        android:text="Next/Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDoneAllCropping"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewCurrentSelectionPrompt"
        android:layout_width="339dp"
        android:layout_height="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/buttonConfirmCurrentArea"
        app:layout_constraintTop_toBottomOf="@+id/imageViewToCrop"
        tools:layout_editor_absoluteX="22dp" />

    <Button
        android:id="@+id/buttonDoneAllCropping"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="45dp"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonConfirmCurrentArea"
        tools:layout_editor_absoluteY="679dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
